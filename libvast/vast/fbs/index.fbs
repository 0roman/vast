include "partition.fbs";
include "uuid.fbs";
include "version.fbs";

namespace vast.fbs;

table LayoutStatistics {
  /// Name of the layout.
  name: string;

  /// Number of events of that type.
  count: uint64;
}

/// The persistent state of the index.
table Index {
  /// The contained partition UUIDs.
  partitions: [UUID];

  /// The index statistics
  stats: [LayoutStatistics];
}

root_type Index;

file_identifier "I001";
