namespace vast.detail;

table Address {
  bytes:[ubyte];
}

table Subnet {
  network:Address;
  length:ushort;
}

enum PortType : ubyte {
  Unknown,
  TCP,
  UDP,
  ICMP
}

struct Port {
  number:ushort = 0;
  type:PortType = Unknown;
}

enum DataType : ubyte {
  NoneType,
  BooleanType,
  IntegerType,
  CountType,
  RealType,
  TimestampType,
  TimespanType,
  EnumerationType,
  StringType,
  PatternType,
  AddressType,
  SubnetType,
  PortType,
  VectorType,
  SetType,
  TableType
}

table MapEntry {
  key:Data;
  value:Data;
}

table Data {
  which:DataType = NoneType;
  boolean:bool = false;
  integer:long = 0;
  count:ulong = 0;
  real:double = 0.0;
  timestamp:long = 0;
  timespan:long = 0;
  enumeration:uint = 0;
  address:Address;
  subnet:Subnet;
  port:Port;
  str:string;
  pattern:string;
  vector:[Data];
  set:[Data];
  map:[MapEntry];
}

root_type Data;
