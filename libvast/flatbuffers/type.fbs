include "attribute.fbs";
include "data.fbs";

namespace vast.fbs;

enum TypeTag : ubyte {
  None,
  Boolean,
  Integer,
  Count,
  Real,
  Timestamp,
  Timespan,
  Enumeration,
  String,
  Pattern,
  Address,
  Subnet,
  Port,
  Vector,
  Set,
  Map,
  Record,
}

table Type {
  which:TypeTag = None;
  name:string;
  attributes:[Attribute];
  subtypes:[Type];
}

root_type Type;
